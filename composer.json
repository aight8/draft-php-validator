{
  "minimum-stability": "dev",
  "name": "aight8/draft-php-validator",
  "description": "A library which validates and clean the ContentState",
  "authors": [
    {
      "name": "Sebastian Fekete",
      "email": "aight8@gmail.com"
    }
  ],
  "homepage" : "https://github.com/aight8/draft-php-validator",
  "license": "MIT",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/aight8/draft-php"
    }
  ],
  "require": {
    "webstronauts/draft-php": "dev-master@dev",
    "php": "^7.0"
  },
  "require-dev": {
    "phpspec/phpspec": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "DraftValidator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DraftValidator\\": "spec/"
    }
  },
  "scripts": {
    "test": "bin/phpspec run"
  },
  "config": {
    "bin-dir": "bin"
  }
}
